<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SView">
        <attr name="sview_cornerRadius" format="dimension" />
        <attr name="sview_shadowColor" format="color" />
        <attr name="sview_shadowSize" format="dimension" />
        <attr name="sview_shadowDy" format="dimension" />
        <attr name="sview_typeface" format="string" />
        <attr name="sview_color" format="string" />
        <attr name="sview_res" format="reference" />
        <attr name="sview_resSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SVGImageView">
        <attr name="svg" format="reference|string"/>
        <attr name="css" format="string"/>
    </declare-styleable>

    <declare-styleable name="Loading">
        <attr name="lv_backgroundStrokeWidth" format="dimension"/>
        <attr name="lv_progressStrokeWidth" format="dimension"/>
        <attr name="lv_progressColor" format="color"/>
        <attr name="lv_backgroundStrokeColor" format="color"/>
        <attr name="lv_mode" format="enum">
            <enum name="loading" value="0"/>
            <enum name="progress" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ArcLayout">
        <attr name="al_arcSize" format="dimension"/>
        <attr name="al_arcDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientView">
        <attr name="gradientStartColor" format="color"/>
        <attr name="gradientEndColor" format="color"/>
        <attr name="gradientStart" format="enum">
            <enum name="Top" value="0"/>
            <enum name="Right" value="1"/>
            <enum name="Bottom" value="2"/>
            <enum name="Left" value="3"/>
            <enum name="TopLeft" value="4"/>
            <enum name="TopRight" value="5"/>
            <enum name="BottomLeft" value="6"/>
            <enum name="BottomRight" value="7"/>
        </attr>
        <attr name="gradientEnd" format="enum">
            <enum name="Top" value="0"/>
            <enum name="Right" value="1"/>
            <enum name="Bottom" value="2"/>
            <enum name="Left" value="3"/>
            <enum name="TopLeft" value="4"/>
            <enum name="TopRight" value="5"/>
            <enum name="BottomLeft" value="6"/>
            <enum name="BottomRight" value="7"/>
        </attr>

    </declare-styleable>

</resources>